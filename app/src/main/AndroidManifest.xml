        android:theme="@style/Theme.Design.NoActionBar"
        tools:targetApi="31">

        <activity
            android:name=".Login"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginInicio"
            android:exported="false" />
        <activity
            android:name=".Inicio"
            android:exported="false"
            android:label="@string/title_activity_inicio" />
        <activity
            android:name=".recordar_password2"
            android:exported="false" />
        <activity
            android:name=".RecordarPassword"
            android:exported="false" />
